@model FaculSys.Models.Nota

@{
    ViewData["Title"] = "Excluir Nota";
}

<h1>Excluir Nota</h1>

<h3>Tem certeza que deseja excluir esta nota?</h3>

<div>
    <h4>Nota</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Aluno</dt>
        <dd class="col-sm-10">@Model.Matricula?.Aluno?.Nome</dd>

        <dt class="col-sm-2">Disciplina</dt>
        <dd class="col-sm-10">@Model.Matricula?.Disciplina?.Nome</dd>

        <dt class="col-sm-2">Nota 1</dt>
        <dd class="col-sm-10">@Model.Nota1</dd>

        <dt class="col-sm-2">Nota 2</dt>
        <dd class="col-sm-10">@Model.Nota2</dd>

        <dt class="col-sm-2">Média</dt>
        <dd class="col-sm-10">@Model.Media</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
