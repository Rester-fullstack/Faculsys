@model FaculSys.Models.Matricula

@{
    ViewData["Title"] = "Excluir Matrícula";
}

<h1>Excluir Matrícula</h1>

<h3>Tem certeza que deseja excluir esta matrícula?</h3>

<div>
    <h4>Matrícula</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Aluno</dt>
        <dd class="col-sm-10">@Model.Aluno?.Nome</dd>

        <dt class="col-sm-2">Disciplina</dt>
        <dd class="col-sm-10">@Model.Disciplina?.Nome</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
