@model FaculSys.Models.Matricula

@{
    ViewData["Title"] = "Detalhes da Matrícula";
}

<h1>Detalhes da Matrícula</h1>

<div>
    <h4>Matrícula</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Aluno</dt>
        <dd class="col-sm-10">@Model.Aluno?.Nome</dd>

        <dt class="col-sm-2">Disciplina</dt>
        <dd class="col-sm-10">@Model.Disciplina?.Nome</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</p>
